<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomThemeActivity">

    <LinearLayout
        android:id="@+id/storyly_view_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.appsamurai.storyly.StorylyView
            android:id="@+id/storyly_view_group_text_color"
            app:storyGroupSize="small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:storyGroupTextColor="#f03932" />

        <com.appsamurai.storyly.StorylyView
            android:id="@+id/storyly_view_group_icon_background_color"
            app:storyGroupSize="small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:storyGroupIconBackgroundColor="#4CAF50" />

        <com.appsamurai.storyly.StorylyView
            android:id="@+id/storyly_view_group_icon_border_color"
            app:storyGroupSize="small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:storyGroupIconBorderColorSeen="@array/customGroupIconSeenColors"
            app:storyGroupIconBorderColorNotSeen="@array/customGroupIconNotSeenColors" />

        <com.appsamurai.storyly.StorylyView
            android:id="@+id/storyly_view_group_pin_color"
            app:storyGroupSize="small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:storyGroupPinIconColor="#3F51B5" />

        <com.appsamurai.storyly.StorylyView
            android:id="@+id/storyly_view_item_text_color"
            app:storyGroupSize="small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:storyItemTextColor="#FF0057" />

        <com.appsamurai.storyly.StorylyView
            android:id="@+id/storyly_view_item_icon_border_color"
            app:storyGroupSize="small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:storyItemIconBorderColor="@array/customItemIconBorderColor" />

        <com.appsamurai.storyly.StorylyView
            android:id="@+id/storyly_view_item_progress_bar_color"
            app:storyGroupSize="small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:storyItemProgressBarColor="@array/customItemProgressBarColor" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>