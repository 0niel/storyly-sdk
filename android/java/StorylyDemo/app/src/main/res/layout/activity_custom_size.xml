<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomSizeActivity">

    <LinearLayout
        android:id="@+id/storyly_view_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.appsamurai.storyly.StorylyView
            android:id="@+id/storyly_view_custom_xlarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:storyGroupSize="large" />

        <com.appsamurai.storyly.StorylyView
            android:id="@+id/storyly_view_custom_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:storyGroupSize="large" />

        <com.appsamurai.storyly.StorylyView
            android:id="@+id/storyly_view_custom_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:storyGroupSize="small" />

        <com.appsamurai.storyly.StorylyView
            android:id="@+id/storyly_view_custom_portrait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:storyGroupSize="custom"
            app:storyGroupIconHeight="100dp"
            app:storyGroupIconWidth="80dp"
            app:storyGroupIconCornerRadius="15dp" />

        <com.appsamurai.storyly.StorylyView
            android:id="@+id/storyly_view_custom_landscape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:storyGroupSize="custom"
            app:storyGroupIconHeight="80dp"
            app:storyGroupIconWidth="100dp"
            app:storyGroupIconCornerRadius="15dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>